from scCAD.scCAD import scCAD
import pandas as pd
import numpy as np

# 1. 读原始 counts 矩阵 (genes × cells)
expr_df = pd.read_csv(
    "/home/zwye/rare/GSE150580/Aged Nulliparous C_expr.csv",
    header=0, index_col=0
)

# 2. 预过滤：只保留在 ≥5 个细胞中有表达（>0）的基因
#min_cells = 5
#gene_mask = (expr_df > 0).sum(axis=1) >= min_cells
#expr_df = expr_df.loc[gene_mask]
#print(f"过滤后基因数: {expr_df.shape[1]} / {gene_mask.size}")

# 3. 准备 scCAD 输入
#    转置成 cells × genes
data      = expr_df.T.values.astype(float)
cellNames = expr_df.columns.tolist()
geneNames = expr_df.index.tolist()
#data      = expr_df.values.astype(float)
#geneNames = expr_df.columns.tolist()
#cellNames = expr_df.index.tolist()
# 4. 调用 scCAD，关闭中间结果保存
result, score, sub_clusters, degs_list = scCAD(
    data          = data,
    dataName      = "MySCE_from_R",
    cellNames     = cellNames,
    geneNames     = geneNames,
    normalization = True,
    rare_h        = 0.01,
    merge_h       = 0.3,
    overlap_h     = 0.7,
    save_full     = False,        # ← 不保存中间 AnnData，节省内存映射
    save_path     = "./scCAD_output"
)

# 5. 输出第一个稀有子簇
print("检测到稀有子簇数：", len(result))
pd.DataFrame({"rare0": result[0]}) \
  .to_csv("rare0_cells.txt", sep="\t", index=False)

